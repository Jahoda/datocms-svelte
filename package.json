{
	"name": "@datocms/svelte",
	"version": "1.2.0",
	"description": "A set of components and utilities to work faster with DatoCMS in Svelte",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/datocms/datocms-svelte.git"
	},
	"author": "Silvano Stralla <silvano@datocms.com>",
	"homepage": "https://github.com/datocms/datocms-svelte",
	"keywords": [
		"svelte",
		"datocms"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.3",
		"@sveltejs/kit": "^1.30.3",
		"@sveltejs/package": "^1.0.2",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/svelte": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"csstype": "^3.1.3",
		"datocms-structured-text-generic-html-renderer": "^2.0.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jsdom": "^21.1.2",
		"jsdom-testing-mocks": "^1.11.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.59.2",
		"svelte-check": "^3.6.2",
		"tslib": "^2.6.2",
		"typescript": "^4.9.5",
		"vite": "^4.5.1",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"dependencies": {
		"datocms-structured-text-utils": "^2.0.4",
		"svelte-intersection-observer": "^0.10.1",
		"universal-base64": "^2.1.0"
	}
}
